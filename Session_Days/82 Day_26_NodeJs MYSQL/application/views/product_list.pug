extends layout
block content
    a(href="/") Add New Item
    table.table
        thead
            tr
                th Sr.No
                th Product Name
                th Product Brand
                th Product Prices
                th Action
        tbody
            if(prod_list.length === 0)
                tr
                    td(colspan="5") No Product To Display
            else
                each product,index in prod_list
                    tr
                        td #{index + 1}
                        td #{product.pl_name}
                        td #{product.pl_brand}
                        td #{product.pl_price}
                        td.action 
                            button(onclick="editDetails(this,"+product.id+")").edit Edit
                            button(onclick="removeElement(this,"+product.id+")").delete Delete 